{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:recommended", "group:allNonMajor"],
    "ignorePaths": [".github/workflows/release.yml"],
    "packageRules": [
        {
            // Must ignore these deps until bitwarden updates its crate.
            // https://github.com/bitwarden/sdk-sm/issues/1244
            "matchPackageNames": ["rustls-webpki", "reqwest"],
            "enabled": false
        }
    ],
    "customManagers": [
        {
            "customType": "regex",
            "managerFilePatterns": ["/^Dockerfile$/"],
            "matchStrings": ["ARG\\s+RUST_TAG=(?<currentValue>[^\\s]+)"],
            "datasourceTemplate": "docker",
            "depNameTemplate": "rust",
            "versioningTemplate": "docker"
        }
    ]
}
